    <PackageReference Include="Newtonsoft.Json" Version="11.0.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Xigadee\Xigadee.Helper.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Communication\Agent\Interfaces\" />
  </ItemGroup>

</Project>
